pipeline {
    agent any

    environment {
        IMAGE_NAME = 'pig-gateway'
        IMAGE_TAG = "${BUILD_NUMBER}"
        MAVEN_HOME = "/opt/apache-maven-3.9.11"
        PATH = "${env.PATH}:${env.MAVEN_HOME}/bin"
    }

    stages {

            stage('Checkout') {
            steps {
                checkout scm
            }
        }

          stage('Echo test') {
                  steps {
                      sh 'echo "开始打包 pig-register 模块..." && echo "执行成功标记"'
                      sh 'echo what is path: $PATH'
                      sh 'echo 验证执行成功: $?' // $?是Shell执行状态码，0=成功，非0=失败
                  }
              }


        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests -f pig-gateway/pom.xml'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}",
                        "--build-arg JAR_FILE=pig-gateway/target/pig-gateway.jar " +
                        "-f pig-gateway/Dockerfile .")
                }
            }
        }

        stage('Clean Up') {
            steps {
                sh "docker rmi ${IMAGE_NAME}:${IMAGE_TAG} || true"
            }
        }
    }

    post {
        success {
            echo "Build successful! Image: ${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "Build failed!"
        }
    }
}
