pipeline {
    agent any

    environment {
        IMAGE_NAME = 'pig-register'
        IMAGE_TAG = "${BUILD_NUMBER}"
        MAVEN_HOME = "/Users/abel/.sdkman/candidates/maven/3.9.11"
        PATH = "${env.PATH}:${env.MAVEN_HOME}/bin"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests -f pig-register/pom.xml'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}",
                        "--build-arg JAR_FILE=pig-register/target/pig-register.jar " +
                        "-f pig-register/Dockerfile .")
                }
            }
        }

        stage('Clean Up') {
            steps {
                sh "docker rmi ${IMAGE_NAME}:${IMAGE_TAG} || true"
            }
        }
    }

    post {
        success {
            echo "Build successful! Image: ${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "Build failed!"
        }
    }
}
