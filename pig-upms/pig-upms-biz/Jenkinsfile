pipeline {
    agent any

    environment {
        IMAGE_NAME = 'pig-upms'
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests -f pig-upms/pig-upms-biz/pom.xml'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}",
                        "--build-arg JAR_FILE=pig-upms/pig-upms-biz/target/pig-upms-biz.jar " +
                        "-f pig-upms/pig-upms-biz/Dockerfile .")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh "docker rm -f ${IMAGE_NAME} || true"
                    sh "docker run -d -p 4000:4000 --name ${IMAGE_NAME} ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }

    post {
        success {
            echo "Deploy successful! Image: ${IMAGE_NAME}:${IMAGE_TAG}"
        }
        failure {
            echo "Deploy failed!"
        }
    }
}
